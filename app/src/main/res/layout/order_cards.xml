<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:id="@+id/orders_details_min"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_recycler_orderid"
            android:textColor="@color/background_palet1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Order ID"
            android:fontFamily="@font/titillium_web"
            android:layout_margin="10dp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_recycler_orderiddb"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Order ID"
            android:layout_margin="10dp"
            android:fontFamily="@font/titillium_web"
            android:layout_toRightOf="@id/txt_recycler_orderid"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/txt_recycler_orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_recycler_orderid"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/titillium_web"
            android:text="Order Status"
            android:textAlignment="center"
            android:textColor="@color/background_palet1"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_recycler_orderStatusdb"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Order ID"
            android:layout_margin="10dp"
            android:fontFamily="@font/titillium_web"
            android:layout_toRightOf="@id/txt_recycler_orderStatus"
            android:textAlignment="center"
            android:layout_alignBaseline="@id/txt_recycler_orderStatus"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_brief_holder"
            android:layout_below="@id/txt_recycler_orderStatus"
            android:background="@color/background_palet1"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            >
            <ImageView
                android:id="@+id/order_details_expander"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/expand"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/orders_details_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_details_min"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="1dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_recycler_order_cutomername"
            android:textColor="@color/background_palet1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Customer Name"
            android:fontFamily="@font/titillium_web"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_recycler_order_cutomernamedb"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Customer Name"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/titillium_web"
            android:layout_toRightOf="@id/txt_recycler_order_cutomername"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_order_scan"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/txt_recycler_order_cutomername"
            android:background="@color/background_palet1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="Scan QR"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_min_holder"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/btn_order_scan"
            android:background="@color/background_palet1"
            >
            <ImageView
                android:id="@+id/order_details_minimizer"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/minimizer"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>