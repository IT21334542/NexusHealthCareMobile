<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PharmacistMenu"
    android:background="@drawable/gradient_background_sweep" >



    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/homeicon_foreground"
        android:id="@+id/closeMenu"
        />

    <ImageView
        android:id="@+id/menuLogo"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/regularwhite_foreground" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userdetailspro"
        android:layout_below="@id/menuLogo"
        android:layout_margin="5dp"
        android:backgroundTint="@color/zxing_transparent"
        android:elevation="@dimen/cardview_default_elevation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/userPic"
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:src="@mipmap/add_medicine"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Username"
                android:id="@+id/profileusername"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_centerVertical="true"/>
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Email"
                android:id="@+id/profileEmail"
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@+id/userPic"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/profileusername"
                android:layout_marginTop="70dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/userdetailspro">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtaddProductToSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:clickable="true"
        android:padding="10dp"
        android:text="Add Product to Sale"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginStart="4dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtEditProfiledetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtaddProductToSale"
        android:background="@color/teal_700"
        android:clickable="true"
        android:padding="10dp"
        android:text="@string/edit_profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginStart="4dp"
        android:textSize="20sp"
        android:focusable="true" />

    <TextView
        android:id="@+id/txtOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEditProfiledetails"
        android:background="@color/teal_700"
        android:clickable="true"
        android:padding="10dp"
        android:text="@string/my_products"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginStart="4dp"
        android:textSize="20sp"
        android:focusable="true" />

    <TextView
        android:id="@+id/txtScanQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOrderHistory"
        android:background="@color/teal_700"
        android:clickable="true"
        android:padding="10dp"
        android:text="Scan Qr Code"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginStart="4dp"
        android:textSize="20sp"
        android:focusable="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Copyright @ MAD-PROJECT"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        />

    </RelativeLayout>



</RelativeLayout>